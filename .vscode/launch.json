    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Proxy",
            "program": "${workspaceFolder}/proxy/dist/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Connector Jest Tests (All)",
            "program": "${workspaceRoot}/connector/node_modules/jest/bin/jest.js",
            "args": [
                "-i",
                "-c", "${workspaceRoot}/connector/jest.config.json"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Connector Jest Tests (Current File)",
            "program": "${workspaceRoot}/connector/node_modules/jest/bin/jest.js",
            "args": [
                "${relativeFile}",
                "-c", "${workspaceRoot}/connector/jest.config.json"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Proxy Jest Tests (All)",
            "program": "${workspaceRoot}/proxy/node_modules/jest/bin/jest.js",
            "args": [
                "-i",
                "-c", "${workspaceRoot}/proxy/jest.config.json"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Proxy Jest Tests (Current File)",
            "program": "${workspaceRoot}/proxy/node_modules/jest/bin/jest.js",
            "args": [
                "${relativeFile}",
                "-c", "${workspaceRoot}/proxy/jest.config.json"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }   
    ]
}